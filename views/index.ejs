<%- include('partials/header') %>

<main
  class="relative bg-center bg-no-repeat bg-cover bg-[url(/imgs/hero.webp)]"
>
  <div
    class="absolute inset-0 bg-roverNeutral/90 sm:bg-transparent sm:bg-gradient-to-r sm:from-roverNeutral/95 sm:to-roverNeutral/15"
  ></div>

  <div
    class="relative max-w-screen-xl px-4 py-32 mx-auto sm:px-6 lg:px-8 lg:h-screen lg:items-center lg:flex"
  >
    <div class="max-w-xl text-center sm:text-left">
      <h1 class="text-3xl font-extrabold sm:text-5xl">
        Pet care,
        <strong class="block font-extrabold text-roverBlue">
          managed.
        </strong>
      </h1>

      <p class="max-w-lg mt-4 sm:leading-relaxed sm:text-xl">
        Track and manage all your important pet details, in one convenient location.
      </p>

      <div class="flex flex-wrap gap-4 mt-8 text-center">
        <a
          href="/signup"
          class="block w-full px-12 py-3 text-sm font-medium text-white rounded shadow bg-roverBlue sm:w-auto active:bg-roverAqua hover:bg-roverAqua focus:outline-none focus:ring"
        >
          Get Started
        </a>

        <a
          href="/about"
          class="block w-full px-12 py-3 text-sm font-medium bg-white rounded shadow text-roverBlue sm:w-auto hover:text-roverAqua active:text-roverAqua focus:outline-none focus:ring"
        >
          Learn More
        </a>
      </div>
    </div>
  </div>
</main>

    

